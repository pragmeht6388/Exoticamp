<style>
    body {
        color: brown;
        /* Change text color to brown */
        text-align: left;
    }

    .container {
        display: grid;
        grid-template-columns: 70% 25%; /* Set the columns width */
        grid-gap: 20px; /* Adjust spacing between divs */
    }

    .single-image,
    .vertical-images {
        display: flex;
        flex-direction: column; /* Stack images vertically */
        height: 100%; /* Make both divs same height */
    }

    .campsite-image,
    .vertical-image {
        max-width: 100%;
        height: auto;
        flex: 1; /* Distribute remaining space evenly */
        margin-bottom: 10px; /* Adjust spacing between images */
    }





    .icon-group {
        display: flex;
        justify-content: space-around;
        align-items: center;
        gap: 20px;
        margin-bottom: 20px;
        color: black;
    }

    .icon-item {
        text-align: center;
    }

        .icon-item i {
            font-size: 2rem; /* Adjust icon size */
            display: block;
            margin-bottom: 5px;
        }

        .icon-item span {
            display: block;
            font-size: 1rem; /* Adjust text size */
        }

        .icon-item:hover {
            transform: translateY(-5px); /* Move up on hover */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add shadow on hover */
        }

            .icon-item:hover i {
                color: #007bff; /* Change icon color on hover */
            }

            .icon-item:hover span {
                color: #007bff; /* Change text color on hover */
            }

    .content-with-map {
        display: flex;
        gap: 20px; /* Space between content and map */
        align-items: start;
        /* Border on all sides */
    }

        .content-with-map .map {
            width: 300px; /* Width of the map */
            height: 200px; /* Height of the map */
            border: 1px solid black;
        }


    .campsite-details {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .campsite-header, .campsite-info {
        margin-bottom: 20px;
    }

        .campsite-header h2 {
            font-size: 2em;
            margin-bottom: 10px;
        }

        .campsite-header p {
            margin: 5px 0;
            font-size: 1.1em;
        }

    .campsite-image {
        width: 100%;
        height: auto;
        margin: 20px 0;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .campsite-info h3 {
        margin-top: 20px;
        font-size: 1.5em;
    }

    .campsite-info p {
        margin: 10px 0;
        font-size: 1em;
    }

    .btn {
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>


