                    @:<i class="bi bi-star-fill" style="font-size: 1.5rem; color: gold;"></i>
                }
                for (int i = rating; i < 5; i++)
                {
                    @:<i class="bi bi-star" style="font-size: 1.5rem; color: gray;"></i>
                }
                @:<span style="margin-left: 5px;">(@formattedRating/5.0)</span>
