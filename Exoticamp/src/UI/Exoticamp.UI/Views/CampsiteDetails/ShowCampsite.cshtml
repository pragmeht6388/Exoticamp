@model IEnumerable<Exoticamp.UI.Models.CampsiteDetails.CampsiteDetailsVM>

@{
    ViewData["Title"] = "Show Campsite";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- Include DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />
    <!-- Include Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<h1 style="text-align: center;">Show Campsite</h1>

<p style="margin-left: 20px;">
    <a asp-action="AddCampsiteDetails" class="btn btn-primary">Create New</a>
</p>

<div class="container mt-3">
    <div class="table-responsive">
        <table class="table table-bordered" id="campsiteTable">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Tent</th>
                    <th>Images</th>
                    <th>Date Time</th>
                    @* <th>Category</th> *@
                    <th>Activity</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>@Html.DisplayFor(modelItem => item.TentType)</td>
                        <td><img src="@item.Images" alt="Campsite Image" style="max-width:100px;max-height:100px;" /></td>
                        <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                        @* <td>@Html.DisplayFor(modelItem=>item.ActivityName)</td> *@
                        @* <td>@Html.DisplayFor(modelItem => item.CategoryName)</td> *@
                        <td>
                            @foreach (var activity in item.Activities)
                            {
                                <span>@activity.Name</span>

                                <br />
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Campsite Actions">
                                <a href="@Url.Action("Details", "CampsiteDetails", new { id = item.Id })" class="btn btn-info" title="Details">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="@Url.Action("EditCampsite", "CampsiteDetails", new { id = item.Id })" class="btn btn-warning" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a href="@Url.Action("DeleteCampsite", "CampsiteDetails", new { id = item.Id })" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this campsite?');">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <!-- Include jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Include DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <!-- Include Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#campsiteTable').DataTable({
                "paging": true, // Enable pagination
                "searching": true, // Enable searching
                "ordering": true, // Enable sorting
                "lengthMenu": [[5, 10, 20, -1], [5, 10, 20, 'All']], // Set the length menu options
                "pageLength": 5, // Set the default page length
            });
        });

        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
                <script>
                toastr.success("@ViewBag.SuccessMessage");
        </script>
        }
            </script>
}
