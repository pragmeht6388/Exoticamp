@model Exoticamp.UI.Models.Events.EventVM

@{
    ViewData["Title"] = "AddEvent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddEvent</h1>

<h4>EventVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEvent" method="post" enctype='multipart/form-data'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LocationId">Select location:</label>
                <select id="location" name="Id" class="form-control">
                    @*onchange="updateCampsites()"*@
                    <option value="">-- Select location --</option>
                    @foreach (var location in ViewBag.Locations)
                    {
                        <option value="@location.Value">@location.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="CampsiteId">Select campsite:</label>
                <select id="campsite" name="Id" class="form-control">
                    @*onchange="updateActivities()"*@
                    <option value="">-- Select campsite --</option>
                    @foreach (var campsite in ViewBag.Campsites)
                    {
                        <option value="@campsite.Value">@campsite.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="ActivityId">Select activities:</label>
                <select id="activity" name="Id" class="form-control" multiple="multiple">
                    <option value="">-- Select activities --</option>
                    @foreach (var activity in ViewBag.Activities)
                    {
                        <option value="@activity.Value">@activity.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Highlights" class="control-label"></label>
                <textarea asp-for="Highlights" class="form-control"></textarea>
                <span asp-validation-for="Highlights" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventRules" class="control-label"></label>
                <textarea asp-for="EventRules" class="form-control"></textarea>
                <span asp-validation-for="EventRules" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" type="checkbox" checked />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button id="backButton">Back to List</button>
</div>
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        toastr.error('@TempData["Message"]');
        document.getElementById('backButton').addEventListener('click', function () {
            window.history.back();
        });
    </script>
}

@section Scripts {
 
    <script>
        // Initialize Select2 for the activities dropdown
        $(document).ready(function () {
            $('#activity').select2();
        });

        function updateCampsites() {
            var locationId = $('#location').val();
            if (locationId) {
                $.ajax({
                    url: '/Event/GetCampsitesByLocation/' + locationId,
                    type: 'GET',
                    success: function (data) {
                        var options = '<option value="">-- Select campsite --</option>';
                        data.forEach(function (campsite) {
                            options += '<option value="' + campsite.id + '">' + campsite.name + '</option>';
                        });
                        $('#campsite').html(options);
                    }
                });
            } else {
                $('#campsite').html('<option value="">-- Select campsite --</option>');
                $('#activity').html('<option value="">-- Select activities --</option>');
            }
        }

        function updateActivities() {
            var campsiteId = $('#campsite').val();
            if (campsiteId) {
                $.ajax({
                    url: '/Event/GetActivitiesByCampsite/' + campsiteId,
                    type: 'GET',
                    success: function (data) {
                        var options = '';
                        data.forEach(function (activity) {
                            options += '<option value="' + activity.id + '">' + activity.name + '</option>';
                        });
                        $('#activity').html(options).trigger('change');
                    }
                });
            } else {
                $('#activity').html('<option value="">-- Select activities --</option>');
            }
        }

        // Set the min attribute for date inputs to today's date
        document.addEventListener('DOMContentLoaded', function () {
            var today = new Date().toISOString().split('T')[0];
            document.querySelector('[name="StartDate"]').setAttribute('min', today);
            document.querySelector('[name="EndDate"]').setAttribute('min', today);
        });

        // Client-side validation for StartDate and EndDate
        document.querySelector('form').addEventListener('submit', function (e) {
            var startDate = new Date(document.querySelector('[name="StartDate"]').value);
            var endDate = new Date(document.querySelector('[name="EndDate"]').value);
            var currentDate = new Date();

            if (startDate <= currentDate) {
                e.preventDefault();
                alert('Start date must be greater than the current date.');
            }

            if (endDate <= startDate) {
                e.preventDefault();
                alert('End date must be greater than the start date.');
            }
        });

        // Back button functionality
        document.getElementById('backButton').addEventListener('click', function () {
            window.history.back();
        });
    </script>

}
