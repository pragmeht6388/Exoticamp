  @model Exoticamp.UI.Models.Users.UsersVM

@{
    ViewData["Title"] = "Show User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exoticamp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            padding-top: 20px;
        }

        .container {
            max-width: 800px;
        }

        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
        }

        .display-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        <div class="row">
            <!-- Left section with profile icon -->
            <div class="col-md-4 text-center">
                <img src="https://via.placeholder.com/150" alt="User Profile Icon" class="profile-img" />
                <h4 class="mt-3">@Html.DisplayFor(model => model.Name)</h4>
            </div>
            <!-- Right section with user details -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">User Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4 display-label">
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </dd>
                            <dt class="col-sm-4 display-label">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-sm-4 display-label">
                                Status
                            </dt>
                            <dd class="col-sm-8">
                                @(Model.IsLocked ? "Inactive" : "Active")
                            </dd>
                            <dt class="col-sm-4 display-label">
                                @Html.DisplayNameFor(model => model.LoginAttemptCount)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.LoginAttemptCount)
                            </dd>
                            <dt class="col-sm-4 display-label">
                                @Html.DisplayNameFor(model => model.Location)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Location)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
            <a asp-action="GetAllUsers" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

