@model Exoticamp.UI.Models.Banners.BannerViewModel

@{
    ViewData["Title"] = "Banners";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

<!-- Include Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

<!-- Custom CSS for styling the form card -->
<style>
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .form-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        background-color: #fff;
    }

        .form-card h1 {
            color: #343a40;
            margin-bottom: 20px;
        }

        .form-card .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .form-card .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .form-card .form-group label {
            font-weight: bold;
        }

        .form-card .form-control {
            border-radius: 5px;
        }

        .form-card .btn-block {
            border-radius: 5px;
        }

        .form-card .text-center a {
            color: #007bff;
            text-decoration: none;
        }

            .form-card .text-center a:hover {
                text-decoration: underline;
            }
</style>

<div class="form-container">
    <div class="card form-card col-md-6 col-lg-4">
        <h1 class="text-center">Banners</h1>
        <hr />
        <form asp-action="AddBanners" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Link" class="form-label">Link<span class="text-danger">*</span></label>
                <input asp-for="Link" class="form-control" data-val="true" data-val-regex="The link must end with .com or .in." data-val-regex-pattern="^(.*\.com|.*\.in)$" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PromoCode" class="form-label">PromoCode<span class="text-danger">*</span></label>
                <select asp-for="PromoCode" class="form-control">
                    <option value="">Select Promo Type</option>
                    <option value="Normal Banner">Normal Banner</option>
                    <option value="Big Banner">Big Banner</option>
                    <option value="Short Banner">Short Banner</option>
                </select>
                <span asp-validation-for="PromoCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LocationId" class="form-label">Location<span class="text-danger">*</span></label>
                <select asp-for="LocationId" class="form-control">
                    <option value="">Select Location</option>
                    @foreach (var location in ViewBag.LocationList)
                    {
                        <option value="@location.Value">@location.Text</option>
                    }
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="form-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>

        <div class="text-center">
            <a asp-action="AllBanners" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        toastr.error('@TempData["Message"]');
    </script>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#addBannerForm").validate();
    });
</script>
