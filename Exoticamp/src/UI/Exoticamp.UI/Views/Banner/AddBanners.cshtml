@model Exoticamp.UI.Models.Banners.BannerViewModel

@{
    Layout = null;
    ViewData["Title"] = "AddBanners";
}

<!-- Include Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

<!-- Custom CSS for styling the form card -->
<style>
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .form-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .form-card h1 {
            color: #343a40;
        }

        .form-card .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
</style>

<div class="form-container">
    <div class="card form-card p-4 border-light-subtle shadow-sm col-md-6 col-lg-4">
        <h1 class="text-center">Add Banners</h1>
        <hr />
        <form asp-action="AddBanners">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Link" class="form-label"></label>
                <input asp-for="Link" class="form-control" data-val="true" data-val-regex="The link must end with .com or .in." data-val-regex-pattern="^(.*\.com|.*\.in)$" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PromoCode" class="form-label"></label>
                <input asp-for="PromoCode" class="form-control" />
                <span asp-validation-for="PromoCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Locations" class="form-label"></label>
                <input asp-for="Locations" class="form-control" />
                <span asp-validation-for="Locations" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImagePath" class="form-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>

        <div class="text-center">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        toastr.error('@TempData["Message"]');
    </script>
}

<!-- Render validation scripts partial -->



<!-- Include jQuery -->
<!-- Include jQuery Validation plugin -->
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<!-- Include jQuery Unobtrusive Validation plugin -->
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#addBannerForm").validate();
    });
</script>
