@model IEnumerable<Exoticamp.UI.Models.Reviews.ReviewsVM>
@using Exoticamp.UI.Models.ReviewReply

@{
    ViewData["Title"] = "ShowReviews";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Your custom styles or additional CSS -->
    <style>
        .div1 {
            font-family: Arial, sans-serif;
            padding: 20px;
            max-width: 800px;
            margin-left: 190px;
            justify-content: center;
        }

        .review-container1 {
            border: 1px solid #ccc;
            background-color: #fff;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-left: 20px; /* Added left margin */
            width: 800px;
        }

        .review-header1 {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .review-details1 {
            margin-bottom: 10px;
        }

        .rating-stars {
            color: #ffc107; /* Star color */
        }

        .submit-reply-btn {
            text-align: right;
            margin-top: 10px;
        }

        .form-dropdown {
            display: none; /* Hide dropdown form by default */
            margin-top: 10px;
        }

        /* Adjust textarea size */
        .form-control {
            padding-left: 8px; /* Increase or decrease as needed */
        }

        textarea.form-control {
            height: auto;
            width: 500px;
            margin-left: 450px;
        }

        .read-more-btn {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="div1">
        <h1 style="text-align:center;">Reviews</h1>

        @if (Model.Any())
        {
            var reviewsToShow = Model.Take(5);
            var totalReviews = Model.Count();
            var showAll = totalReviews > 5;

            foreach (var item in reviewsToShow)
            {
                <div class="review-container1">
                    <div class="review-header1">
                        <div>
                            <strong>Campsite Name:</strong> @Html.DisplayFor(modelItem => item.CampsiteName)
                        </div>
                        <div>
                            <strong>Ratings:</strong>
                            @{
                                int rating = (int)item.Ratings;
                                for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= rating)
                                    {
                                        <i class="bi bi-star-fill rating-stars"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star rating-stars"></i>
                                    }
                                }
                            }
                            (@item.Ratings.ToString("0.0") / 5.0)
                        </div>
                    </div>
                    <div class="review-details1">
                        <strong>Name:</strong> @Html.DisplayFor(modelItem => item.Name)
                        <br />
                    </div>
                    <div class="review-details1">
                        <strong>Description:</strong> @Html.DisplayFor(modelItem => item.Description)
                    </div>
                </div>
            }

            @if (showAll)
            {
                <div class="read-more-btn">
                    <button id="readMoreBtn" class="btn btn-primary">Read More</button>
                </div>

                <div id="allReviews" style="display:none;">
                    @foreach (var item in Model.Skip(5))
                    {
                        <div class="review-container1">
                            <div class="review-header1">
                                <div>
                                    <strong>Campsite Name:</strong> @Html.DisplayFor(modelItem => item.CampsiteName)
                                </div>
                                <div>
                                    <strong>Ratings:</strong>
                                    @{
                                        int rating = (int)item.Ratings;
                                        for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= rating)
                                            {
                                                <i class="bi bi-star-fill rating-stars"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star rating-stars"></i>
                                            }
                                        }
                                    }
                                    (@item.Ratings.ToString("0.0") / 5.0)
                                </div>
                            </div>
                            <div class="review-details1">
                                <strong>Name:</strong> @Html.DisplayFor(modelItem => item.Name)
                                <br />
                            </div>
                            <div class="review-details1">
                                <strong>Description:</strong> @Html.DisplayFor(modelItem => item.Description)
                            </div>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <p style="text-align:center">No reviews yet.</p>
        }
    </div>

    <!-- JavaScript libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- JavaScript functions -->
    <script>
        $(document).ready(function () {
            $('#readMoreBtn').click(function () {
                var allReviews = $('#allReviews');
                var btn = $(this);

                allReviews.slideToggle(function () {
                    // Update button text after slideToggle completes
                    if (allReviews.is(':visible')) {
                        btn.text('Read Less');
                    } else {
                        btn.text('Read More');
                    }
                });
            });
        });
    </script>

</body>
</html>
