@model Exoticamp.UI.Models.Banners.BannerViewModel

@{
    ViewData["Title"] = "Banner Details";
    Layout = "~/Views/Shared/_LayoutLandingPage.cshtml"; ;
}

<!-- Bootstrap and FontAwesome CSS for icons and styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<style>
    .container1 {
        padding: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9fa, #e2e2e2);
    }

    .banner-details {
        max-width: 600px;
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease;
    }

        .banner-details:hover {
            transform: translateY(-10px);
        }

        .banner-details img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

    .btn-cancel {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        border-radius: 5px;
        font-size: 16px;
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        transition: background-color 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .banner-details .fa {
        margin-right: 10px;
    }

    .banner-details h2 {
        font-family: 'Montserrat', sans-serif;
        color: #333;
    }

    .banner-details h5,
    .banner-details p {
        font-family: 'Roboto', sans-serif;
        color: #555;
    }

        .banner-details h5 i,
        .banner-details p i {
            color: #17a2b8;
        }
</style>

<div class="container1">
    <div class="card banner-details">
        <h2 class="card-title text-center mt-3 mb-4">Banner Details</h2>

        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <img src="@Model.ImagePath" class="img-fluid rounded" alt="Banner Image">
            </div>
            <div class="col-12 mt-4">
                <h5><i class="fas fa-link"></i> <a id="promoCodeLink" href="@Model.Link" ></a>Link For Camp Below</h5>
                <p><i class="fas fa-map-marker-alt"></i> Location: @ViewBag.LocationName</p>
                <p><i class="fas fa-tag"></i> Promo Code: @Model.PromoCode</p>
                <p><i class="fas fa-check-circle"></i> Active: @(Model.IsActive ? "Yes" : "No")</p>

                <button id="goToLinkButton" class="btn btn-primary btn-block">Go to Link</button>
                <a id="backButton" class="btn btn-cancel mt-3"><i class="fas fa-times"></i> Cancel</a>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script type="text/javascript">
    document.getElementById('goToLinkButton').addEventListener('click', function () {
        window.location.href = "@Model.Link"; // Redirect to the banner link
    });

    document.getElementById('backButton').addEventListener('click', function () {
        window.history.back();
    });
</script>
