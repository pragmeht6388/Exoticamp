@model Exoticamp.UI.Models.Users.UsersVM
@using Exoticamp.UI.Models.Location

@{
    ViewData["Title"] = "My Profile";
    Layout = "_LayoutLandingPage";
}

<div class="profile-container">
    <h2>My Profile</h2>
    <div class="profile-card">
        <div class="profile-header">
            <h3>@Model.Name</h3>
        </div>
        <form asp-action="Profile" method="post">
            @Html.HiddenFor(x => x.Name)

            <div class="profile-details">
                <div class="form-group">
                    <label for="mobile">Mobile #</label>
                    <input type="text" id="mobile" asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control">
                    <i class="edit-icon"></i>
                </div>
                <div class="form-group">
                    <label for="email">Email ID</label>
                    <input type="email" id="email" asp-for="Email" value="@Model.Email" class="form-control">
                    <i class="edit-icon"></i>
                </div>
@*                 <div class="form-group">
                    <label for="alternateNumber">Alternate #</label>
                    <input type="text" id="alternateNumber" name="AlternateNumber" value="@Model.AlternateNumber" class="form-control">
                    <i class="edit-icon"></i>
                </div> *@
                <div class="form-group">
                    <label for="location">Location</label>
                    <i class="edit-icon"></i>
                    <select id="preferences" asp-for="LocationId" class="form-control">
                        @if (ViewBag.Locations is not null)
                        {
                            @foreach (var item in (IEnumerable<LocationVM>)ViewBag.Locations)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                        
                    </select>
                </div>
                <div class="form-group">
                    <label for="preferences">Preference</label>
                    <i class="edit-icon"></i>
                    <select id="preferences" asp-for="PreferenceId" class="form-control">
                        <option value="2B28C50B-120B-40E2-D421-08DC8390A473">Hiking</option>
                        <option value="57B636FA-437C-4944-D422-08DC8390A473">Kayaking</option>
                        <option value="9193FD46-5182-4C56-D425-08DC8390A473">Stargazing</option>
                    </select>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-success">Save</button>
                <a  class="btn btn-danger" asp-action="Index" asp-asp-controller="Home">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .profile-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .profile-card {
        text-align: center;
    }

    .profile-header {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-right: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        position: relative;
    }

    .form-control {
        width: calc(100% - 30px);
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        display: inline-block;
    }

    .edit-icon {
        position: absolute;
        right: 10px;
        top: 10px;
        cursor: pointer;
    }

    .form-actions {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }
</style>
