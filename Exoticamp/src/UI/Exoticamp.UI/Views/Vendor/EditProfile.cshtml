                        <label class="display-label">License</label>
                        <img src="@Model.License" alt="License" class="kyc-img" />
                    </div>
                    <div class="row-line">
                        <label class="display-label">KYC Address</label>
                        <img src="@Model.KYCAddress" alt="KYC Address" class="kyc-img" />
